{
  "env": {
    "browser": true,
    "es2021": true,
    "amd": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "prettier"
  ],
  "plugins": ["react", "import"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect" //tells eslint to look at the package.json and figure it out
    }
  },

  "rules": {
    "react/prop-types": 0, //turns off props types '0' means turn off
    "react/react-in-jsx-scope": 0, //turns off requiring to import react in every file
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": 1
  }
}
